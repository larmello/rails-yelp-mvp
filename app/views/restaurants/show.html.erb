<div class="container py-3">
  <div class="d-flex flex-row align-items-center">
    <div class="col-md-8">
      <h1 class="text-warning font-weight-bolder font-italic"><%= @restaurant.name %></h1>
    </div>
    <div class="col-md-2">
      <%= link_to content_tag(
          :i,
          nil,
          class: 'fa fa-edit fa-2x pl-3 text-warning'
        ),
        edit_restaurant_path
      %>
      <%= link_to content_tag(
          :i,
          nil,
          class: 'fa fa-trash fa-2x pl-3 text-warning'
        ),
        restaurant_path(@restaurant),
        method: :delete,
        data: { confirm: 'Are you sure?' }
      %>
    </div>
  </div>
  <div class="d-flex flex-row">
    <div class="col-md-8">
      <div class="card p-3 mb-3">
        <p><strong>Address: </strong><%= @restaurant.address %></p>
        <p><strong>Phone: </strong><%= @restaurant.phone_number %></p>
        <h6><strong>Category:</strong> <%= @restaurant.category %></h6>
      </div>
    </div>
    <div class="col-md-2">
      <spam><%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-outline-warning' %></spam>
    </div>
  </div>
  <div class="d-flex flex-row">
    <div class="col-md-8">
      <div class="card p-3 mb-3">
      <% @restaurant.reviews.each do |review| %>
        <p>
          <p><%= review.rating %> Stars</p>
          <p><%= review.content %></p>
          <%= link_to 'Delete', review_path(review), class: 'btn btn-outline-warning', method: :delete, data: { confirm: 'Sure?'} %>
          <hr>
        </p>
      <% end %>
      </div>
    </div>
  </div>
</div>
