<div class="container py-3">
  <div class="row">
    <div class="col-md-8">
      <% @restaurants.each do |rest| %>
        <div class="card p-3 mb-3">
          <h4><%= link_to rest.name, restaurant_path(rest), class: "text-decoration-none text-warning font-weight-bolder " %></h4>
          <h6><strong>Category:</strong> <%= rest.category %></h6>
        </div>
      <% end %>
    </div>
  </div>
</div>
